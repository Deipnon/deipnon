{
  "name": "deipnon",
  "private": true,
  "license": "ISC",
  "scripts": {
    "addpackage": "lerna add",
    "api:addpackage": "npm run addpackage -- --scope=@deipnon/api",
    "api:dev": "lerna run dev --parallel --scope @deipnon/utils --scope @deipnon/api",
    "clean:all": "lerna clean",
    "components:addpackage": "npm run addpackage -- --scope=@deipnon/components",
    "components:dev": "lerna exec --scope @deipnon/components -- npm run dev",
    "components:test": "lerna exec --scope @deipnon/components -- npm run test",
    "components:test:update": "lerna exec --scope @deipnon/components -- npm run test:update",
    "dashboard:addpackage": "npm run addpackage -- --scope=@deipnon/dashboard",
    "dashboard:dev": "lerna run dev --parallel --scope @deipnon/api --scope @deipnon/themes --scope @deipnon/components --scope @deipnon/utils --scope @deipnon/dashboard",
    "eslint": "eslint ./packages --fix",
    "install:all": "lerna bootstrap",
    "lerna": "lerna",
    "lerna:ls": "lerna ls",
    "storybook": "lerna run storybook --parallel --scope @deipnon/themes --scope @deipnon/components",
    "website:addpackage": "npm run addpackage -- --scope=@deipnon/website",
    "website:dev": "lerna run dev --parallel --scope @deipnon/api --scope @deipnon/themes --scope @deipnon/components --scope @deipnon/website",
    "test:all": "lerna run test --parallel",
    "test:all:update": "lerna run test:update --parallel"
  },
  "devDependencies": {
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.1.1",
    "eslint-plugin-standard": "^4.0.1",
    "flow-bin": "^0.109.0",
    "flow-typed": "^2.6.1",
    "lerna": "^3.16.4"
  }
}
